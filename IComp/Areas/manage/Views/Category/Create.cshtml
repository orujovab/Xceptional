@model CategoryPostDto
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Collectable">Collectable</label>
                    <input asp-for="Collectable" class="form-control">
                    <span class="text-danger" asp-validation-for="Collectable"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsPopular">Popularity</label>
                    <input asp-for="IsPopular" class="form-control">
                    <span class="text-danger" asp-validation-for="IsPopular"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="form-control" placeholder="Enter Image">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
            </form>
        </div>
    </div>
</div>
