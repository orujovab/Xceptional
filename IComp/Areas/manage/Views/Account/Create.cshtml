@model AdminRegisterViewModel
@{
    ViewData["Title"] = "Create";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/util.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/manage/assets/images/img-01.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" asp-action="create" method="post">
                    <span class="login100-form-title">
                        Admin Register
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" asp-for="FullName" placeholder="Enter FullName">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="FullName"></span>

                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" asp-for="UserName" placeholder="Enter Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="UserName"></span>

                    </div>
                   <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" asp-for="Email" placeholder="Enter Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Email"></span>

                    </div>

                    <div class="wrap-input100 validate-input">
                        <select style="width:100%;" class="form-control" asp-for="Roles" asp-items="@(new SelectList(Model.Roles))">
                        </select>
                        <span asp-validation-for="Roles"></span>

                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" asp-for="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Password"></span>

                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>
    </div>





</body>
</html>

