@model AdminLoginViewModel
@{
    ViewData["Title"] = "Login";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/manage/assets/css/main.css">
	<link rel="stylesheet" type="text/css" href="~/manage/assets/css/util.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="~/manage/assets/images/img-01.png" alt="IMG">
				</div>

				<form class="login100-form validate-form" asp-action="login" method="post">
					<span class="login100-form-title">
						Admin Login
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" asp-for="UserName" placeholder="Enter Username">
						<span class="focus-input100" ></span>
						<span class="symbol-input100" >
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
						<span asp-validation-for="UserName"></span>

					</div>

					<div class="wrap-input100 validate-input" data-validate = "Password is required">
						<input class="input100" asp-for="Password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
						<span asp-validation-for="Password"></span>

					</div>
					
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Login
						</button>
					</div>

					<div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" asp-action="forgotpassword" asp-controller="account" asp-area="manage">
							Username / Password?
						</a>
					</div>

				</form>
			</div>
		</div>
	</div>
	
	

	

</body>
</html>