@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/util.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/manage/assets/images/img-01.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" asp-action="forgotpassword" asp-controller="account" asp-area="manage" method="post">
                    <span class="login100-form-title">
                        Enter Email to reset password
                    </span>

                    
                   <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" asp-for="Email" placeholder="Enter Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <span asp-validation-for="Email"></span>

                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Send
                        </button>
                    </div>

                    <div asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>
    </div>





</body>
</html>

