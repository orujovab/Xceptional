@model MotherBoardPostDto
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ModelName">Name</label>
                    <input type="text" asp-for="ModelName" class="form-control" placeholder="Enter ColorName">
                    <span class="text-danger" asp-validation-for="ModelName"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Count">Count</label>
                    <input type="text" asp-for="Count" class="form-control" placeholder="Enter Count">
                    <span class="text-danger" asp-validation-for="Count"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="IsAvailable">IsAvailable</label>
                    <input asp-for="IsAvailable" class="form-control">
                    <span class="text-danger" asp-validation-for="IsAvailable"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input type="text" asp-for="Price" class="form-control" placeholder="Enter Price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
            </form>
        </div>
    </div>
</div>

