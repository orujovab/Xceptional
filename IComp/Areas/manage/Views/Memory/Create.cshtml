@model MemoryPostDto
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ModelName">Model</label>
                    <input type="text" asp-for="ModelName" class="form-control" placeholder="Enter Title">
                    <span class="text-danger" asp-validation-for="ModelName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DDRType">DDRType</label>
                    <input class="form-control" asp-for="DDRType" placeholder="Enter DDRType">
                    <span class="text-danger" asp-validation-for="DDRType"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="Speed">Speed</label>
                    <input class="form-control" asp-for="Speed" placeholder="Enter Speed">
                    <span class="text-danger" asp-validation-for="Speed"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="MemoryCapacityId">ProcessorSerie</label>
                    <select class="form-control" asp-for="MemoryCapacityId" asp-items="@new SelectList(ViewBag.Capacities,nameof(MemoryCapacity.Id),nameof(MemoryCapacity.Capacity))">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="IsAvailable">IsAvailable</label>
                    <input class="form-control" asp-for="IsAvailable" placeholder="Enter SubTitle">
                    <span class="text-danger" asp-validation-for="IsAvailable"></span>
                </div>
                <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
            </form>
        </div>
    </div>
</div>

