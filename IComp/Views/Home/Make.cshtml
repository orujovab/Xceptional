@model List<CategoryGetDto>
@{
    ViewData["Title"] = "Make";

}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="form-row">
                <form asp-action="make" asp-controller="home" method="post">
                    @foreach (var item in Model)
                    {
                        @if (item.Collectable == true)
                        {
                            <div class="form-group col-lg-12 mb-3">
                                <label>@item.Name</label>

                                <select class="form-control" name="productsId[]" style="height:50px;">
                                    <option value="0">seç</option>

                                    @foreach (var product in item.Products)
                                    {
                                        <option value="@product.Id">@product.Name</option>
                                    }
                                </select>
                            </div>
                        }
                    }
                    <button type="submit" class="btn btn-primary mb-3" id="submit-btn" style="width: 152px;height: 49px;">Səbətə</button>
                </form>
            </div>
        </div>
    </div>
</div>

