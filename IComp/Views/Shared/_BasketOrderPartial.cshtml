@model Order

<form id="basketOrder" method="post" asp-action="createbasketorder" asp-controller="order" enctype="multipart/form-data" style="margin-bottom: 20px;">
    <div class="form-group">
        <label asp-for="FullName">Name</label>
        <input type="text" asp-for="FullName" class="form-control" placeholder="Enter Name">
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Phone">
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

   <button type="submit" class="checkout">Sifariş</button>
   <div class="clear-fix"></div>
</form>